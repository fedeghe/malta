{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "no-console": 0,
        "no-extra-semi": 1,
        "no-useless-escape": 0,
        "no-cond-assign": 0,
        "semi": 2,
        "use-isnan": 2,
        "default-case": 2,
        "complexity": [
            "error", {
                "max": 9
            }
        ],
        "no-unused-vars": 2,
        "lines-around-comment": 2,
        "lines-between-class-members": 2,
        "no-multiple-empty-lines": 2,
        "no-trailing-spaces": 2,
        "no-unneeded-ternary": 2,
        "yoda": 2,
        "object-curly-spacing": ["error", "always"],
        "arrow-body-style": 2,
        "eol-last": 2,
        "space-in-parens": [
            "error",
            "never"
        ],
        "array-bracket-spacing": ["error", "always"],
        "arrow-parens": ["error", "as-needed"],
        "arrow-spacing": [
            "error", {
                "before": true,
                "after": true
            }
        ],
        "max-lines-per-function": [
            "error", {
                "max": 40,
                "skipComments": true,
                "skipBlankLines": true
            }
        ],
        "comma-spacing": [
            "error",
            {
                "before": false,
                "after": true
            }
        ],
        "comma-style": [
            "error",
            "last"
        ],
        "no-const-assign": "error",
        "no-duplicate-imports": [
            "error",
            {
                "includeExports": true
            }
        ],
        "no-var": "error",
        "one-var": [
            "error",
            "always"
        ],
        "object-shorthand": "error",
        "prefer-destructuring": [
            "error",
            {"VariableDeclarator": { "object": true},"AssignmentExpression": { "array": true}}
        ],
        "new-cap": ["error", { "newIsCap": true }],
        "prefer-template": "error",
        "quotes": [
            "warn",
            "single",
            {
                "avoidEscape": true
            }
        ],
        "no-new-object": "error"
    }
}